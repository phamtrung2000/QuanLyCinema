            <Grid>
                <TextBox x:Name="txtMaKH"  Margin="131,25,10,355" TextWrapping="Wrap" Text="" HorizontalContentAlignment="Left" MaxWidth="300" MaxHeight="25"/>
                <Label  x:Name="lblMaKH" Content="Mã khách hàng:"
                       Margin="10,25,331,355"/>

                <TextBox x:Name="txtHoTen" Height="25" Margin="131,60,10,318" TextWrapping="Wrap" Text="" MaxWidth="300" MaxHeight="25"/>
                <Label x:Name="lblHoTen" Content="Họ tên:"
                       Margin="10,60,340,320"/>

                <TextBox  x:Name="txtDiachiKH" Height="25" Margin="131,95,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MaxWidth="300" MaxHeight="25"/>
                <Label x:Name="lblDiachi" Content="Địa chỉ:"
                       Margin="10,95,340,285"/>

                <DatePicker x:Name="dtpNgaySinh" Margin="131,130,10,0"  Text="" VerticalAlignment="Top"  HorizontalContentAlignment="Left"  SelectedDateFormat="Short"/>
                
                <TextBox x:Name="txtNgaySinh" Margin="131,130,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  HorizontalContentAlignment="Left"/>
                <Label x:Name="lblNgaysinh" Content="Ngày sinh:"
                       Margin="10,130,340,250" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>

                <RadioButton x:Name="rdbNam" Height="25" Margin="131,165,241,213" Content="Nam" Width="60"/>
                <RadioButton x:Name="rdbNu" Height="25" Margin="226,165,146,213" Content="Nữ" Width="60"/>
