                       Margin="10,165,340,215" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>

                <TextBox x:Name="txtSDTKH" Margin="120,200,10,175"  Text="" TextWrapping="Wrap" HorizontalContentAlignment="Left"></TextBox>
                <Label x:Name="lblSDTKH" Content="Số điện thoại:"
                       Margin="10,200,340,175" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MaxWidth="80" Height="25" MaxHeight="25"/>


                <TextBox x:Name="txtLoaiKH" Margin="131,247,10,128" TextWrapping="Wrap" Text="" HorizontalContentAlignment="Left"/>
                <Label x:Name="lblLoaiKH" Content="Loại khách hàng:"
                       Margin="10,247,321,131" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"  Height="25"/>


