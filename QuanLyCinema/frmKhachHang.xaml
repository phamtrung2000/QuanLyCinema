                <DatePicker x:Name="dtpNgayDK" Margin="131,292,10,83"  Text="" HorizontalContentAlignment="Left" ></DatePicker>
                <Label x:Name="lblNgayDK" Content="Ngày đăng ký:"
                       Margin="10,292,331,86" HorizontalContentAlignment="Stretch" Height="25"  VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Danh sách khách hàng" Margin="480,140,20,20" Width="450">
            <DataGrid x:Name="dtgDSKH" Height="400" VerticalAlignment="Top" Width="432" 
                      HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                      SelectedCellsChanged="dtgDSKH_SelectedCellsChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Mã khách hàng" Binding="{Binding MaKH}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh_String}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}"></DataGridTextColumn>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Loại khách hàng" Binding="{Binding LoaiKH}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Ngày đăng ký" Binding="{Binding NgayDK_String}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel HorizontalAlignment="Left" Height="122" VerticalAlignment="Top" Width="410" Margin="20,0,0,0">
            <Grid x:Name="panelTimKiem" Height="120">
                <TextBox x:Name="txtTimKiem" Height="39" TextWrapping="Wrap" Text="Tìm Kiếm..." Margin="10,10,10,71"
                         TextChanged="txtTimKiem_TextChanged" GotFocus="txtTimKiem_GotFocus"  LostFocus="txtTimKiem_LostFocus"/>
                <ComboBox x:Name="cbbTimKiem" HorizontalAlignment="Left" Margin="160,75,0,0" VerticalAlignment="Top" Width="240"
                          SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="Mã Khách Hàng" HorizontalAlignment="Left" Width="238"/>
                    <ComboBoxItem Content="Họ Tên Khách Hàng" HorizontalAlignment="Left" Width="238"/>
                    <ComboBoxItem Content="Số Điện Thoại" HorizontalAlignment="Left" Width="238"/>
                </ComboBox>

            </Grid>
        </StackPanel>


        <StackPanel HorizontalAlignment="Left" Height="112" Margin="470,10,0,0"
                    VerticalAlignment="Top" Width="460">
            <Grid Height="120">
                <Button x:Name="btnTimKiem" Content="Tìm Kiếm" Width="135" Height="44" Margin="10,10,315,66" Click="btnTimKiem_Click"/>
                <Button x:Name="btnThem" Content="Thêm" Width="135" Height="44" Margin="165,10,160,66" Click="btnThem_Click"  />
                <Button x:Name="btnSua" Content="Sửa" Width="135" Height="44" Margin="165,66,160,10" Click="btnSua_Click" />
                <Button x:Name="btnLamMoi" Content="Làm mới" Width="135" Height="44" Margin="10,66,315,10" Click="btnLamMoi_Click"/>

                <Button x:Name="btnXoa" Content="Xóa" Width="135" Height="44" Margin="315,10,10,66" Click="btnXoa_Click" />
                <Button x:Name="btnLuu_Sua" Content="Lưu" Width="135" Height="44" Margin="165,66,160,10" Visibility="Hidden" Click="btnLuu_Sua_Click" />
                <Button x:Name="btnHuy_Sua" Content="Hủy" Width="135" Height="44" Margin="315,66,10,10" Background="#FF673AB7" Click="btnHuy_Sua_Click"/>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>
